{
  "name": "lra1-tool",
  "version": "0.1.0",
  "description": "LoRa evaluation tool for LRA1",
  "main": "build/main.js",
  "scripts": {
    "build": "webpack --mode production",
    "build-dev": "webpack --display-error-details",
    "get-update": "npm-check-updates -u && npm update && npm update --save-dev",
    "pack:win": "electron-builder --win --x64",
    "pack:mac": "electron-builder --mac --x64",
    "start": "electron .",
    "test": "jest",
    "watch": "webpack -w"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SuzukIoT/LRA1-tool.git"
  },
  "build": {
    "appId": "jp.co.suzukiot.lra1-tool",
    "directories": {
      "output": "dist"
    },
    "extraFiles": [
      "app/preload/*"
    ],
    "files": [
      "app",
      "assets",
      "build",
      "index.html",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "assets/win/appicon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "suzukiot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/suzukiot/LRA1-tool/issues"
  },
  "homepage": "https://github.com/suzukiot/LRA1-tool#readme",
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.29",
    "@fortawesome/free-regular-svg-icons": "^5.13.1",
    "@fortawesome/free-solid-svg-icons": "^5.13.1",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "bulma": "^0.9.0",
    "css-loader": "^3.6.0",
    "electron": "^11.5.0",
    "electron-builder": "^22.7.0",
    "electron-rebuild": "^1.11.0",
    "eslint": "^7.3.1",
    "eslint-plugin-jest": "^23.17.1",
    "jest": "^26.1.0",
    "node-sass": "^4.14.1",
    "npm-check-updates": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "url-loader": "^4.1.0",
    "vue": "^2.6.11",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@serialport/parser-readline": "^9.0.0",
    "serialport": "^9.0.0"
  }
}
